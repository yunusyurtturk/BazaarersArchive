
    {{^item-not-exist}}
        <div class="col-xs-12 col-sm-4">

            <div class="carousel-container">
                <div id="myCarousel" class="carousel slide item-image-list" data-ride="carousel" data-interval="false">
                    <!-- Indicators -->
                    <ol class="carousel-indicators">
                        {{#item-image-indicators}}
                        <li data-target="#myCarousel" data-slide-to="{{image-index}}" class="{{image-index-class}}"></li>
                        {{/item-image-indicators}}
                    </ol>

                    <!-- Wrapper for slides -->
                    <div class="carousel-inner item-image-in-list" role="listbox">
                        {{#images}}
                            <div class="item {{image-index-class}}">
                                <img src="/itempics/{{image}}" alt="{{image-alt}}">
                            </div>
                        {{/images}}

                     </div>

                <!-- Left and right controls -->
                <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
            </div>

            {{>social-share-container}}

            {{^is-item-owner}}
                {{#logged-in}}
                <div id="sendMessageContainer" style="text-align: center; margin-top: 1em;">
                    <a type="button" class="btn btn-success" onclick="$('#sendMessageFormContainer').slideToggle('fast');" >{{send-message-button-text}}</a>
                    <div id="sendMessageFormContainer" style="display: none;">
                    {{>itemmessage-send-form}}
                    </div>
                </div>
                {{/logged-in}}

                {{^logged-in}}
                    <div class="row">
                        <div class="col-xs-12 col-md-12" style="display: block; float: left;margin-top: 2em; text-align: center;">
                            <a href="/login" class=" bg-warning" style=" padding-top: 1em; padding-bottom: 1em; padding-left: 1em; padding-right: 1em;">{{not-logged-in-message}}</a>
                        </div>
                    </div>
                {{/logged-in}}
            {{/is-item-owner}}
            {{#is-item-owner}}
                <div style="display: block; width: 100%; text-align: center;">
                    <a type="button" class="btn btn-danger" onclick="removeItem('{{remove-item-url}}')">{{remove-item-text}}</a>
                </div>
                {{>modal-remove-item-result}}
            {{/is-item-owner}}

            <div class="row">
                <div class="col-xs-12" style="margin-top:2em;">
                    {{>itemowner-info}}
                </div>
            </div>




        </div>
        <div class="col-xs-12 col-sm-8">
            <div class="item-info-container">
                <h3 class="item-header">
                    {{title}} <a style="font-size:.7em;" href="{{edit-item-info-target-url}}">DÃ¼zenle</a>
                </h3>
                <p class="item-description">
                    {{{description}}}
                </p>
                <div class="item-info">
                    <p>{{itemowner-translate}}:<a href="{{site-addr}}/user/{{user-id}}"><b>{{user-name}}</b></a></p>
                    <p>{{addtime-translate}}: <b>{{time}}</b></p>
                    <p>{{count-translate}}: <b>{{count}}</b></p>
                    <p>{{price-translate}}: <b>{{price}}</b></p>
                </div>

            </div>
            {{#item-location-image-url}}
            <div class="row">
               <div class="col-xs-12" style="margin-top:8em; text-align:center">
                   <img src="{{item-location-image-url}}" class="img-responsive" style=" margin: 0 auto;"/>
               </div>
            </div>
            {{/item-location-image-url}}
            <div class="row">
            <div class="col-xs-9" style="margin-top:7em;">
                <strong>{{other-items-of-user-text}}</strong>
            </div>
            {{>other-items-of-user}}
            </div>
        </div>
    {{/item-not-exist}}
    {{#item-not-exist}}
        <div class="col-md-12" style="margin-top: 2em;">
           <p class=" bg-warning" style=" padding-top: 1em; padding-bottom: 1em; padding-left: 1em; padding-right: 1em;">{{error-message}}</p>

        </div>
    {{/item-not-exist}}


